{
  "manifest_version": 3,
  "name": "Pickture",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "https://auth.inditex.com/*",
    "https://api.inditex.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["panel.html", "panel.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "logo_no_text.png",
    "48": "logo_no_text.png",
    "128": "logo_no_text.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
